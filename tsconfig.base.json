{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@gameenginejs/runtime": ["packages/runtime/src"],
      "@gameenginejs/ai": ["packages/ai/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
